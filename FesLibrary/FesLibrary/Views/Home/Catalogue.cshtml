@model IEnumerable<FesLibrary.Models.CatalogueItem>
@using FesLibrary.Models

@{
    ViewBag.Title = "Catalogue";
}

<h2>Catalogue</h2>

<table width='100%' border="1">
    <tr>
        <th>
            ID
        </th>
        <th>
            Title
        </th>
        <th>
            Author
        </th>
        <th>
            Status
        </th>
        <th>
            Borrower
        </th>
        <th>
            Due Date
        </th>
    </tr>

        @foreach (CatalogueItem item in @Model)
        {
            <tr>
                <td>
                    @item.ID
                </td>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Authors
                </td>
                <td>
                    @item.Status
                </td>
                <td>
                    @item.Borrower
                </td>
                <td>
                    @item.DueDate
                </td>
                @if (item.Status == "available")
                { 
                    <td align='center'>
                        @Html.ActionLink("Borrow", "Borrow", new {id = item.ID})
                    </td>
                }
                else
                {
                    <td align='center'>
                        <text> - </text>
                    </td>
                }
                
                @if (item.Status == "checked out")
                {
                    <td align='center'>
                        @Html.ActionLink("Extend", "Extend", new { id = item.ID })
                    </td>
                }
                else
                {
                    <td align='center'>
                        <text> - </text>
                    </td>
                }

                @if (item.Status == "checked out")
                {
                    <td align='center'>
                        @Html.ActionLink("Return", "Return", new { id = item.ID })
                    </td>
                }
                else
                {
                    <td align='center'>
                        <text> - </text>
                    </td>
                }
        </tr>
    }

</table>